if [ -f "$HOME/.secrets" ]; then
	source "$HOME/.secrets"
else
	echo "$HOME/.secrets file missing"
fi

if hash javac &>/dev/null; then
	export JAVA_HOME=$(dirname $(dirname $(readlink -f "$(which javac)")))
elif hash java &>/dev/null; then
	echo "Java compiler not installed which is not recommended, Using java instead"
	export JAVA_HOME=$(dirname $(dirname $(readlink -f "$(which java)")))
else
	echo "Java not installed, please install java"
fi

if [ -f "$HOME/.local/share/maven/bin/mvn" ]; then
	export PATH=$HOME/.local/share/maven/bin:$PATH
fi

if hash mvn &>/dev/null; then
	export M2_HOME=$(dirname $(dirname $(readlink -f "$(which mvn)")))
	export MAVEN_HOME=${M2_HOME}
else
	echo "maven not installed, please install maven"
fi

export PATH=$HOME/.local/bin:$PATH
GPG_TTY="$(tty)"
export GPG_TTY

if hash vim &>/dev/null; then
	export EDITOR=vim
else
	echo "VIM Not installed"
fi
